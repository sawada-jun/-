const gators = document.querySelector("#gatorsbutton");//ã‚¢ãƒªã‚²ãƒ¼ã‚¿ãƒ¼æ”¾å‡ºãƒœã‚¿ãƒ³ã®IDå–å¾—

gators.addEventListener("click", function () {
    const counter = document.querySelector("#inputnum");
    const gatorsBox = document.querySelector("#bluebox");
    gatorsBox.innerText = "";
    for (let i = 1; i <= counter.value; i++) {
        if(i % 10 === 0){
        gatorsBox.innerText = "ğŸ–"+gatorsBox.innerText + "ğŸŠ"
        } else {
        gatorsBox.innerText += "ğŸŠ"
        }
    }
 }
)

const clear = document.querySelector("#clearbutton");//ã‚¯ãƒªã‚¢ãƒœã‚¿ãƒ³ã®IDå–å¾—

clear.addEventListener("click", function () {
    const gatorsBox = document.querySelector("#bluebox");
    const counter = document.querySelector("#inputnum");
    gatorsBox.innerText = "";
    counter.value = "";
    gators.style.display = "none";
    hint.style.display = "block";
    
}
)

const hint = document.querySelector("#hint");//ãƒ’ãƒ³ãƒˆãƒ†ã‚­ã‚¹ãƒˆã®IDå–å¾—
const input = document.querySelector("#inputnum");
    
input.addEventListener("change",function(){
        if(input.value !== ""){
            gators.style.display = "block";
            hint.style.display = "none"
        } else { 
            hint.style.display = "block";
            gators.style.display = "none";
        }
    }
)    





